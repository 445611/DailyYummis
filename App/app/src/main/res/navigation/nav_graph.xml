<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.dailyyummies.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment2_to_mapFragment2"
            app:destination="@id/mapFragment" />
        <action
            android:id="@+id/action_homeFragment2_to_mealFragment2"
            app:destination="@id/mealFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.dailyyummies.map.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/action_mapFragment2_to_mealFragment2"
            app:destination="@id/mealFragment" />
        <action
            android:id="@+id/action_mapFragment2_to_homeFragment2"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/mealFragment"
        android:name="com.example.dailyyummies.meals.MealFragment"
        android:label="fragment_meals"
        tools:layout="@layout/fragment_meals" >
        <action
            android:id="@+id/action_mealFragment2_to_homeFragment2"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_mealFragment2_to_mapFragment2"
            app:destination="@id/mapFragment" />
    </fragment>
</navigation>